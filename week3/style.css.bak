@media (max-width: 600px) {
  nav, article {
    width: 100%;
    height: auto;
  }
}
body {
  background-color: #63F7EA;
}

h1 {
  color: rgb(0, 0, 0);
  text-align: center;
  font-size: 36px;
  border-style: groove;
}

p {
  font-family: Calibri;
  font-size: 20px;
 text-align: center;
 margin: 15px;
}

article {
  float: center;
  padding-left: 40px;
  padding-right: 40px;
  border-style: dotted;
}
.image {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 40%;
  height: 40%;
  border-radius: 30%;
}